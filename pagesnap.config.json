{
  "output": {
    "location": "./snapshots",
    "formats": ["png", "jpg"],
    "storage": {
      "provider": "filesystem",
      "location": "./snapshots",
      "overwrite": true
    }
  },
  "performance": {
    "maxConcurrency": 4
  },
  "sanitization": {
    "blockerLists": [],
    "customRules": [
      "#cookie-law-info-bar",
      "[id*='cookie']",
      "[class*='cookie']",
      "[id*='banner']",
      "[class*='banner']",
      "[id*='popup']",
      "[class*='popup']",
      "[id*='dialog']",
      "[class*='dialog']"
    ]
  },
  "watermark": {
    "enabled": false,
    "type": "text",
    "text": {
      "content": "PageSnap",
      "font": "Arial",
      "size": "24px",
      "color": "rgba(0, 0, 0, 0.5)",
      "position": "bottom-right",
      "x_offset": 10,
      "y_offset": 10
    },
    "image": {
      "path": "",
      "opacity": 0.5,
      "position": "center",
      "width": "100px",
      "height": "auto"
    }
  }
}
